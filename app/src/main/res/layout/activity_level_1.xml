<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_level_1"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.umanga.clicker.Level_1"
    android:background="@drawable/app_back">


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:id="@+id/linearLayout3"
        android:layout_above="@+id/activity_level_1_button_question4"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">

    </LinearLayout>

    <Button
        android:id="@+id/activity_level_1_button_question1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Question 1"
        android:textSize="30sp"
        android:layout_above="@+id/activity_level_1_button_question2"
        android:layout_centerHorizontal="true" />

    <Button
        android:id="@+id/activity_level_1_button_question5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:clickable="false"
        android:enabled="false"
        android:text="Question 5"
        android:textSize="30sp"
        android:layout_below="@+id/linearLayout3"
        android:layout_alignLeft="@+id/activity_level_1_button_question4"
        android:layout_alignStart="@+id/activity_level_1_button_question4"
        android:layout_marginTop="59dp" />

    <Button
        android:id="@+id/activity_level_1_button_question2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:clickable="false"
        android:enabled="false"
        android:text="Question 2"
        android:textSize="30sp"
        android:layout_above="@+id/activity_level_1_button_question3"
        android:layout_alignLeft="@+id/activity_level_1_button_question1"
        android:layout_alignStart="@+id/activity_level_1_button_question1" />

    <Button
        android:id="@+id/activity_level_1_button_question4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:clickable="false"
        android:enabled="false"
        android:text="Question 4"
        android:textSize="30sp"
        android:layout_below="@+id/activity_level_1_button_question3"
        android:layout_alignLeft="@+id/activity_level_1_button_question3"
        android:layout_alignStart="@+id/activity_level_1_button_question3" />

    <Button
        android:id="@+id/button_back_to_exam"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Back"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:id="@+id/activity_level_1_button_question3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:clickable="false"
        android:enabled="false"
        android:text="Question 3"
        android:textSize="30sp"
        android:layout_centerVertical="true"
        android:layout_alignLeft="@+id/activity_level_1_button_question2"
        android:layout_alignStart="@+id/activity_level_1_button_question2" />


</RelativeLayout>
